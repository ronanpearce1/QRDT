<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Comptible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../css/style.ejs'); %>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;500;600&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container">
        <figure>
            <a"><img src="https://i.ibb.co/SmZxC8h/logo.png" class="img" alt="logo" border="0" width="250px"
                    height="150px"></a>
        </figure>
        <form class="form" id="register" action="/register" method="POST">
            <h2 class="formTitle">Register</h2>
            <p class="error">
                <% if (messages.error) { %>
                    <%= messages.error %>
                        <% } %>
            </p>

            <div>
                <input type="text" class="entry" id="name" name="name" placeholder="Enter Name" autofocus required>
            </div>
            <div>
                <input type="email" class="entry" id="email" name="email" placeholder="Enter Email" required>
            </div>
            <div>
                <input type="password" class="entry" id="password" name="password" placeholder="Enter Password"
                    required>
            </div>
            <button type="submit" class="button">Register</button>
        </form>
        <a href="/login" class="changeForm">Already have an account? Sign in here!</a>
        <br>
        <a href="/info" class="changeForm">Need some help?</a>
    </div>
</body>